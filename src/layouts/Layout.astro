---
import HeaderTab from "../components/HeaderTab";
import "../styles/switzer.css";
import Section from "./Section.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- 






      Header
     -->
    <Section>
      <header class="pt-6 z-40 fixed top-0 left-0 w-full flex items-center justify-center">
        <div class="flex items-center justify-center bg-zinc-900 rounded-full w-full max-w-[30rem] p-1 space-x-0.5">
          <HeaderTab title="The Adpharm" href="/" active={Astro.url.pathname === "/"} />
          <HeaderTab title="Synapse Medcom" href="https://www.synapsemedcom.ca/" />
          <HeaderTab title="Adpharm Digital" href="/ad" active={Astro.url.pathname === "/ad"} />
        </div>
      </header>
    </Section>

    <!-- 





      Content
     -->
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: "Switzer-Variable", "ui-sans-serif", system-ui, sans-serif;
    font-weight: 300;
    background: #000;
    color: white;
    /* background-size: 224px; */
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
